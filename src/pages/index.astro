---
import AuthForm from "../components/AuthForm/AuthForm.tsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Demo sign-in form">
  <header>
    <button
      aria-label="Toggle theme"
      class="toggle-theme"
      onclick="document.documentElement.classList.toggle('not-prefered-theme')"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><circle cx="12" cy="12" r="10"></circle><path d="M12 2a7 7 0 1 0 10 10"
        ></path></svg
      >
    </button>
  </header>
  <main>
    <AuthForm client:load />
  </main>
</Layout>

<style is:global>
  .toggle-theme {
    background: none;
    border: none;
    cursor: pointer;
    color: currentColor;
  }
</style>
