      function convertElementToHTML(elem: HTMLElement): string {
        const temp = document.createElement("div");
        temp.appendChild(elem.cloneNode(true));
        return temp.innerHTML;
      }

      function shareToEmail(querySelector: string) {
        const rootElement = document
          .querySelector(querySelector)
          ?.cloneNode(true) as HTMLElement;

        const elem = recursivelyApplyInlineStyles(rootElement);

        const html = convertElementToHTML(elem);

        navigator.clipboard
          .writeText(html)
          .then(() => {
            alert("HTML string copied to clipboard");
          })
          .catch(() => {
            alert("Failed to copy HTML string to clipboard");
          });
      }

      function removeAllDataAttributes(element: HTMLElement) {
        if (Object.keys(element.dataset).length > 0) {
          for (const key in Object.keys(element.dataset)) {
            delete element.dataset[key];
          }
        }
      }

      function clearAttributes(element: HTMLElement) {
        element.removeAttribute("class");
        element.removeAttribute("id");
        removeAllDataAttributes(element);
      }

      let stylescheet = null;

      function getStylesheet() {
        stylescheet = Array.from(document.styleSheets).find((sheet) =>
          Array.from(sheet.cssRules).some(
            (rule) =>
              rule instanceof CSSStyleRule &&
              rule?.selectorText.includes(".space-signal"),
          ),
        );

        if (!stylescheet) {
          throw new Error("Stylesheet not found");
        }

        return stylescheet;
      }

      function replaceCssVariables(cssText: string) {
        return cssText.replaceAll(/var\((--[^)]+)\)/g, (_, varName) =>
          getComputedStyle(document.documentElement).getPropertyValue(varName),
        );
      }

      function recursivelyApplyInlineStyles(element: HTMLElement) {
        const stylescheet = getStylesheet();

        if (element.classList.length > 0) {
          if (element.classList.contains("hide-email-only")) {
            element.classList.remove("hide-email-only");
          }

          for (let i = 0; i < element.classList.length; i++) {
            const className = element.classList.item(i);
            const rule = Array.from(stylescheet.cssRules).find(
              (rule) =>
                rule instanceof CSSStyleRule &&
                rule?.selectorText.includes(`.${className}`),
            ) as CSSStyleRule;

            if (rule) {
              element.style.cssText += replaceCssVariables(rule.style.cssText);
            }
          }

          clearAttributes(element);
        }

        if (element.children) {
          for (let i = 0; i < element.children.length; i++) {
            const child = element.children[i] as HTMLElement;
            recursivelyApplyInlineStyles(child);
          }
        }

        return element;
      }

